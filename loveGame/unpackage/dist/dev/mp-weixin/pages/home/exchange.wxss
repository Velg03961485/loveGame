
.exchange-page{
	width: 100%;
	display: flex;
	flex-wrap: wrap;
	padding-bottom: 30rpx;
}
.exchangeIt{
	width: 335rpx;
	height: 423rpx;
	background: #FFFFFF;
	box-shadow: 0rpx 4rpx 16rpx 0rpx rgba(0,0,0,0.1);
	border-radius: 10rpx;
	display: flex;
	flex-direction: column;
	margin-left: 20rpx;
	margin-right: 20rpx;
	margin-top: 30rpx;
}
.exchangeItImg{
	width: 335rpx;
	height: 250rpx;
	border-radius: 10rpx;
}
.exchangeItDe{
	width: 305rpx;
	height: 80rpx;
	font-size: 28rpx;
	font-family: PingFangSC-Medium, PingFang SC;
	font-weight: 500;
	color: #333333;
	line-height: 40rpx;
	margin: 0 auto;
	margin-top: 15rpx;
}
.exchangeItBtn{
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-top: 10rpx;
}
.exchangeItBtnL{
	height: 48rpx;
	font-size: 26rpx;
	font-family: PingFangSC-Medium, PingFang SC;
	font-weight: 500;
	color: #FA8585;
	line-height: 48rpx;
	margin-left: 20rpx;
}
.exchangeItBtnR{
	width: 90rpx;
	height: 40rpx;
	background: #FA8585;
	box-shadow: 0rpx 4rpx 16rpx 0rpx rgba(255,83,83,0.5);
	border-radius: 200rpx;
	font-size: 28rpx;
	font-family: PingFangSC-Medium, PingFang SC;
	font-weight: 500;
	color: #FFFFFF;
	line-height: 40rpx;
	letter-spacing: 1rpx;
	text-align: center;
	margin-right: 20rpx;
}

